<h1>Little Esty Shop</h1>
<h3><%= link_to "My Items", "/items/index" %></h3>
<h3><%= link_to "My Invoices", "/invoices/index" %></h3>
<h3><%= @merchant.name %></h3>
<h3><% @merchant.best_customers.each do |cust| %>
  <% if cust.last > 1 %>
    <%= Customer.find_name_for_merchant(cust.first) +": #{cust.last} successful transactions" %><br>
  <% else %>
    <%= Customer.find_name_for_merchant(cust.first) +": #{cust.last} successful transaction" %><br>
  <% end %>
<% end %>
</h3>
