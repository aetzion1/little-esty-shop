<h1>Little Esty Shop</h1>
<h3><%= link_to "My Items", "/items/index" %></h3>
<h3><%= link_to "My Invoices", "/invoices/index" %></h3>
<h3><%= @merchant.name %></h3>
<h3><% @merchant.best_customers.each do |cust| %>
  <% binding.pry %>
  <% if cust.total_success > 1 %>
    <%= cust.first_name +": #{cust.total_success} successful transactions" %><br>
  <% else %>
    <%= cust.first_name +": #{cust.total_success} successful transaction" %><br>
  <% end %>
<% end %>
</h3>
